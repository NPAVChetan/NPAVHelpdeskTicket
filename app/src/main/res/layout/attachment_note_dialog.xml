<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF8D">

        <ImageView
            android:id="@+id/iv_attach_img_note"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_default_photo_48" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_write_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editTextAddNote"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:hint="@string/add_a_note"
            android:importantForAutofill="no"
            android:inputType="textCapSentences"
            android:paddingHorizontal="10dp"
            android:text="" />

        <ImageButton
            android:id="@+id/imgBtnSendNote"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_pencil"
            android:contentDescription="@string/todo"
            android:padding="40dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

</LinearLayout>